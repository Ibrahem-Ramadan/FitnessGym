@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
  <main class="d-flex align-items-center min-vh-100 pt-3 py-md-0">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="~/assets/images/bodybuilder.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <h2 style="   text-transform: uppercase; font-weight: 800;font-size: 32px;">Fitness <em style="font-style: normal;color: #ed563b;font-weight: 900;">Gym</em></h2>        
                </div>
              <form id="account" method="post">
                  <div class="form-group">
                    <label class="sr-only">Email or Username</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email or Username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>
                  <div class="form-group mb-4">
                    <label class="sr-only">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="********" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                  </div>
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                  <input id="login-submit"  class="btn btn-block login-btn mb-4" type="submit" value="Login">
                </form>
                <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password-link">Forgot password?</a>
                <p class="login-card-footer-text">Don't have an account? <a href="/Identity/Account/Register" class="text-reset">Subscribe Now</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

@section Scripts {
    <script>
      $(function(){
          $("header").addClass("background-header")
      })
    </script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark"  title="Manage"><i class="fa fa-user"></i> @User.Identity?.Name</a>
    </li>
    <li class="main-button">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="">Logout</button>
        </form>
    </li>
}
else
{
    <li class="main-button">
        <a href="/Identity/Account/Login"><i class="fa fa-user"></i> Login</a>
    </li>

    <li class="scroll_to_section">
        <a  href="/Identity/Account/Register">Subscribe</a>
    </li>
}
